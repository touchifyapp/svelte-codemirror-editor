{
  "name": "svelte-codemirror-editor",
  "description": "A svelte component to create a CodeMirror 6+ editor",
  "version": "0.0.0-development",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Touchify",
    "email": "dev@touchify.io",
    "url": "https://touchify.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/touchifyapp/svelte-codemirror-editor"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "package": "svelte-package",
    "preview": "vite preview",
    "test": "npm run lint && npm run check",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "release": "npm run package && npm run release:zip && semantic-release",
    "release:zip": "zip -r -j svelte-codemirror-editor.zip package"
  },
  "peerDependencies": {
    "codemirror": "^6.0.0",
    "svelte": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@codemirror/lang-css": "^6.0.0",
    "@codemirror/lang-html": "^6.0.0",
    "@codemirror/lang-javascript": "^6.0.0",
    "@codemirror/theme-one-dark": "^6.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.3",
    "@semantic-release/npm": "^11.0.1",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.6",
    "@sveltejs/package": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "codemirror": "^6.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "semantic-release": "^22.0.8",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^4.0.0"
  }
}
