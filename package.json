{
    "name": "svelte-codemirror-editor",
    "description": "A svelte component to create a CodeMirror 6+ editor",
    "version": "0.0.0-development",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Touchify",
        "email": "dev@touchify.io",
        "url": "https://touchify.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/touchifyapp/svelte-codemirror-editor"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "package": "svelte-package",
        "preview": "vite preview",
        "test": "npm run lint && npm run check",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check --plugin-search-dir=. . && eslint .",
        "format": "prettier --write --plugin-search-dir=. .",
        "release": "npm run package && npm run release:zip && semantic-release",
        "release:zip": "zip -r -j svelte-codemirror-editor.zip package"
    },
    "peerDependencies": {
        "codemirror": "^6.0.0"
    },
    "devDependencies": {
        "@codemirror/lang-css": "^6.0.0",
        "@codemirror/lang-html": "^6.0.0",
        "@codemirror/lang-javascript": "^6.0.0",
        "@codemirror/theme-one-dark": "^6.0.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.4",
        "@semantic-release/npm": "^9.0.1",
        "@sveltejs/adapter-static": "next",
        "@sveltejs/kit": "next",
        "@sveltejs/package": "next",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "codemirror": "^6.0.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "prettier": "^2.6.2",
        "prettier-plugin-svelte": "^2.7.0",
        "semantic-release": "^19.0.3",
        "svelte": "^3.44.0",
        "svelte-check": "^2.7.1",
        "svelte-preprocess": "^4.10.6",
        "tslib": "^2.3.1",
        "typescript": "^4.7.2",
        "vite": "^3.1.0-beta.1"
    },
    "exports": {
        ".": {
          "svelte": "./src/lib/index.ts"
        }
    }    
}
